datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    // Fields required and structured according to Auth.js adapter expectations
    id            String    @id @default(cuid())
    name          String?
    email         String    @unique
    emailVerified DateTime?
    image         String?
    accounts      Account[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    memberships Membership[]
    invitations Invitation[]
    potTokens   PotToken[]
}

model Account {
    // Fields required and structured according to Auth.js adapter expectations
    userId            String
    type              String
    provider          String
    providerAccountId String
    refresh_token     String?
    access_token      String?
    expires_at        Int?
    token_type        String?
    scope             String?
    id_token          String?
    session_state     String?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    user User @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@id([provider, providerAccountId])
}

model Kitchen {
    id          String  @id @default(cuid())
    name        String
    slug        String  @unique
    description String?
    image       String?
    website     String?
    location    String?

    // Stripe-based Billing
    customerId           String
    subscriptionId       String
    usageItemId          String
    lastBilledUsageBlock Int    @default(0)
    spendingLimit        Float  @default(20.0)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    memberships Membership[]
    invitations Invitation[]

    pots Pot[]
}

model Membership {
    uid  String
    kid  String
    role Role

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    chef    User    @relation(fields: [uid], references: [id])
    kitchen Kitchen @relation(fields: [kid], references: [id])

    @@id([uid, kid])
}

model Invitation {
    id      String           @id @default(uuid())
    uid     String
    kid     String
    role    Role
    code    String
    status  InvitationStatus @default(Pending)
    created DateTime         @default(now())
    expires DateTime

    chef    User    @relation(fields: [uid], references: [id])
    kitchen Kitchen @relation(fields: [kid], references: [id])
}

enum Role {
    Owner
    Admin
    Member
}

enum InvitationStatus {
    Pending
    Accepted
    Revoked
}

model Pot {
    id          String  @id @default(cuid())
    kid         String
    name        String
    description String?
    image       String?
    website     String?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    kitchen Kitchen @relation(fields: [kid], references: [id], onDelete: Cascade)

    tokens     PotToken[]
    impression Impression[]

    @@unique([kid, name])
}

model PotToken {
    id    String @id @default(cuid())
    token String @unique
    pid   String
    uid   String

    expiresAt DateTime?
    createdAt DateTime  @default(now())

    pot       Pot  @relation(fields: [pid], references: [id], onDelete: Cascade)
    createdBy User @relation(fields: [uid], references: [id], onDelete: Cascade)

    @@index([token])
}

model Impression {
    id      String  @id @default(cuid())
    pid     String
    url     String?
    email   String?
    note    String
    emotion String?
    label   String?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    pot Pot @relation(fields: [pid], references: [id], onDelete: Cascade)
}
